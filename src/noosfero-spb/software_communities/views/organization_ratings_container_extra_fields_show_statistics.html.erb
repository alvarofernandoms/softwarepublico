<div class="aditional-informations">
  <% unless user_rating.nil? %>
    <div class="comments-people-benefited">
      <span><%=_("Benefited People")%>:</span> <%= user_rating.people_benefited.present? ? number_with_delimiter(user_rating.people_benefited) : _(" --- ") %>
    </div>

    <div class="comments-saved-value">
      <span><%=_("Saved Resources")%>:</span> <%= user_rating.saved_value.present? ? number_to_currency(user_rating.saved_value) : _(" --- ") %>
    </div>
  <% end %>
</div>

