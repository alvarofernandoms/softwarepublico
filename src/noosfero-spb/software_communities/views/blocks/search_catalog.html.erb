<div id="catalogo-software-search">
  <h2><%= _("Catalog of Software") %></h2>
  <%= form_tag(controller: "search", action: block.search_catalog, method: "get") do %>
  <%= text_field_tag(:query, nil, :placeholder => "e.g: cacic, e-cidade, gsan, etc", :class=>"searchField", :id=>"search-Gadget") %>
    <%= submit_tag(_("Search"), {:class=>"searchButton-catalog"})%>
  <% end %>

  <div id="search-catalog-footer">
    <p><%= link_to _("Access the complete catalog"), {controller: "search", action: block.search_catalog} , {:id => "bt_catalog-search"}%></p>
  </div>
</div>
