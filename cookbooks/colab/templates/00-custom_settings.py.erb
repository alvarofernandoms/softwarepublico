EMAIL_PORT =  25
EMAIL_SUBJECT_PREFIX = "<%= node['config']['email_subject_prefix'] %>"

SECRET_KEY = "<%= File.read('/etc/colab/secret.key').strip %>"

SITE_URL = "<%= node['config']['site_url'] %>"

SPB_HOST = "<%= node['config']['external_hostname'] %>"
