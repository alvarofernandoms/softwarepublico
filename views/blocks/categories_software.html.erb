<div id="mais-software-block">
  <div id="sbp-information-softwares">

  <h2><%= _("See more Software") %></h2>
    <ul>
      <li><a href="#"><%= _("Most downloaded") %></a></li>
      <li><a href="#"><%= _("Top rated") %></a></li>
      <li><a href="#"><%= _("Recently updated") %></a></li>
      <li><a href="#"><%= _("New in portal") %></a></li>
    </ul>
  </div>

  <div id="list-categories">
    <p><%= _("Categories:") %></p>
    <ul class="categories-mais-software">

      <% Category.where(:name => "Software").first.children.each do |category| %>
        <% unless category.software_infos.count < 1 %>
          <li><%= link_to _("#{category.name}") + " (#{category.software_infos.count})", {:controller => :search, :action => :software_infos, :selected_categories => [category.id]} %></li>
        <% end %>
      <% end %>
    </ul>
  </div>

  <div id="footer-mais-software">
    <%= link_to _("Access the complete catalog"), {controller: "search", action: "software_infos"}%>
  </div>
</div>
