<%= javascript_include_tag "edit-link-list.js" %>
<div id='edit-download-block'>
  <ul class="link-list-header">
    <li class='download-list-name'><%= _('Name') %></li>
    <li class='download-list-link'><%= _('Link') %></li>
    <li class='download-list-software-description'><%= _('Software Description') %></li>
    <li class='download-list-version-news'><%= _('Link to Versio News') %></li>
    <li class='download-list-minimum-requirements'><%= _('Link to Minimum Requirements') %></li>
    <li class='download-list-size'><%= _('Size:') %></li>
  </ul>

  <ul id="droppable-list-downloads">
    <% for download in @block.downloads %>
      <%= render :partial => 'download_list', :locals => {:download => download} %>
    <% end %>
  </ul>

  <div id = "new" >
    <% new = {'icon' => 'ok'} %>
    <%= render :partial => 'download_list', :locals => {:download => new} %>
  </div>

<%= link_to_function(_('New link'), 'add_new_link();', :class => 'button icon-add with-text') %>
</div>
