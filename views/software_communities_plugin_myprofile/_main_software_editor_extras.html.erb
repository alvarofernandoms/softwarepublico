<h3> <%= _("Name") %> </h3>
<div id="name">
  <%= text_field_tag("community[name]", @profile.name) %>
</div>

<h3> <%= _("Acronym") %> </h3>
<div id="acronym">
  <%= text_field_tag("software[acronym]", @profile.software_info.acronym, :maxlength=>"10") %>
</div>

<h3> <%= _("Finality") %> </h3>
<div id="finality">
  <%= text_area_tag "software[finality]", @profile.software_info.finality, :placeholder => _("What is the software for?"), :maxlength => 120 %>
</div>

<div id="profile_change_picture_title">
  <h3><%= _('Software Logo') %></h3>
</div>
<div id="profile_change_picture">
    <%= f.fields_for :image_builder, @profile.image do |i| %>
      <%= file_field_or_thumbnail(_('Image:'), @profile.image, i) %><%= _("Max size: %s (.jpg, .gif, .png)")% Image.max_size.to_humanreadable %>
    <% end %>
</div>

<h3><%= _("License Version: ") %></h3>
<div id='licenses'>
  <%= render :partial => "license_info_fields", :locals => {
      :license_version => @license_version,
      :license_id => @license_id,
      :another_version => @another_license_version,
      :another_link => @another_license_link
    }
  %>
</div>

<h3> <%= _("Link to Repository") %> </h3>
<div id='repository_link'>
  <%= text_field_tag("software[repository_link]", @profile.software_info.repository_link, :class => "improve_input_size") %>
</div>


