  <%end%>
</div>

<div id='table_structure_libraries' style="display:none"><%= LibraryHelper.add_dynamic_table %></div>
<%= link_to _('New Library'), "#", :class=>"button icon-add with-text new-dynamic-table dynamic-libraries"%>

